<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#e7e7e8" />
      <stroke
          android:width="1dp"
          android:color="#f1f1f2" />
      <corners
          android:radius="12dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#e7e7e8"
          android:endColor="#f1f1f2"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#18d7e5" />
      <corners
          android:radius="12dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>